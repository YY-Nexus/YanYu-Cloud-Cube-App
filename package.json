{
  "name": "yan-yu-cloud-cube-app",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "pnpm lint --fix",
    "type-check": "tsc -p tsconfig.base.json --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "format": "prettier . --write",
    "release": "standard-version",
    "prepare": "husky install",

    "quality:gate": "node scripts/quality/gate.mjs --config startup-quality-config.yaml > scorecard.json",
    "quality:check": "if [ ! -f scorecard.json ]; then echo 'scorecard.json not found. Run pnpm quality:gate first.' && exit 1; fi; node scripts/quality/exit-check.mjs scorecard.json",
    "quality:run": "pnpm quality:gate && pnpm quality:check",
    "quality:gate:local": "mkdir -p metrics/runs && TS=$(date +%Y%m%d-%H%M%S) && node scripts/quality/gate.mjs --config startup-quality-config.yaml | tee metrics/runs/scorecard-$TS.json > scorecard.json",
    "quality:baseline": "mkdir -p metrics/baseline && TS=$(date +%Y%m%d) && node scripts/quality/gate.mjs --config startup-quality-config.yaml > metrics/baseline/scorecard-$TS.json",
    "quality:debug": "METRIC_STARTUP_SUCCESS_RATE=99.9 node scripts/quality/gate.mjs --config startup-quality-config.yaml"
  },
  "dependencies": {
    "next": "^15.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "standard-version": "^9.5.0",
    "turbo": "^2.0.0",
    "typescript": "^5.9.2",
    "vitest": "^1.6.0",
    "yaml": "^2.4.5"
  }
}